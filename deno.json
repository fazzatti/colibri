{
  "workspace": ["./core", "./test-tooling"],

  "imports": {
    "jsr:@colibri/core": "./core",
    "jsr:@colibri/test-tooling": "./test-tooling",
    "colibri-internal/": "./_internal/",
    "colibri-tools/": "./_tools/",

    "stellar-sdk": "npm:@stellar/stellar-sdk@^14.0.0",
    "buffer": "npm:buffer@^6.0.3",
    "convee": "jsr:@fifo/convee@^0.6.1",

    "@std/assert": "jsr:@std/assert@^1.0.0",
    "@std/testing": "jsr:@std/testing@^1.0.0"
  },
  "tasks": {
    "check": "deno check *",

    "test": "deno test -A --parallel --clean --coverage=coverage && deno coverage coverage",
    "test:unit": "deno task test --ignore=.integration.test.ts",
    "test:integration": "deno task test --ignore=.unit.test.ts",
    "coverage:report": "deno coverage --html"
  },
  "lint": {
    "plugins": [],
    "rules": {
      "exclude": ["no-slow-types", "explicit-function-return-type"]
    }
  }
}
