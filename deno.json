{
  "workspace": ["./core", "./common"],

  "imports": {
    "jsr:@colibri/core": "./core",
    "jsr:@colibri/common": "./common",
    "colibri-internal/": "./_internal/",
    "colibri-tools/": "./_tools/",

    "stellar-sdk": "npm:@stellar/stellar-sdk@^14.0.0",
    "buffer": "npm:buffer@^6.0.3",

    "@std/assert": "jsr:@std/assert@^1.0.0",
    "@std/testing": "jsr:@std/testing@^1.0.0"
  },
  "tasks": {
    "check": "deno check *",

    "test": "deno test -A",
    "test:unit": "deno test -A --ignore=.integration.test.ts",
    "test:integration": "deno test -A --ignore=.unit.test.ts"
  },
  "lint": {
    "plugins": []
  }
}
